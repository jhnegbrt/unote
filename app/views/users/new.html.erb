<form action="<%=users_url%>" method="POST">
  <%= authenticity_helper %>
  <label for="username">Username:</label>
  <input name="user[username]" id="username" type="text" value="<%=@user.username%>">
  <br>
  <label for="email">Email:</label>
  <input name="user[email]" id="email" type="text" value="<%=@user.email%>">
  <br>
  <label for="password">Password:</label>
  <input name="user[password]" id="password" type="password" value="">
  <br>
  <label for="password_confirmation">Confirm Password:</label>
  <input name="password[password_confirmation]" id="password_confirmation" type="password" value="">
  <br>
  <input type="submit" value="Sign Up!">
  <%= render 'shared/errors' %>
</form>